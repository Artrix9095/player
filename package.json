{
  "name": "vidstack-workspace",
  "version": "0.6.13",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/**"
  ],
  "scripts": {
    "build": "turbo run build types --filter=./packages/*",
    "build:vidstack": "turbo run build types --filter=vidstack",
    "build:react": "turbo run build types --filter=react",
    "build:site": "turbo run build types --filter=site",
    "build:site:vercel": "turbo run build:vercel types --filter=site",
    "clean": "turbo run clean",
    "preview:site": "turbo run preview --filter=site",
    "dev:site": "turbo run dev --filter=site",
    "format": "turbo run format --parallel",
    "test": "turbo run test --parallel",
    "preinstall": "npx only-allow pnpm",
    "release": "pnpm build && node .scripts/release.js",
    "release:dry": "pnpm run release --dry",
    "validate": "turbo run build format test"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^16.0.0",
    "chokidar": "^3.5.0",
    "enquirer": "^2.3.0",
    "esbuild": "^0.16.0",
    "execa": "^6.0.0",
    "fs-extra": "^11.0.0",
    "globby": "^13.0.0",
    "kleur": "^4.1.5",
    "lint-staged": "^13.0.0",
    "minimist": "^1.2.5",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.11.0",
    "prettier-plugin-svelte": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "rimraf": "^3.0.0",
    "semver": "^7.3.0",
    "simple-git-hooks": "^2.8.0",
    "svelte": "^4.0.0",
    "turbo": "^1.9.0",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "volta": {
    "node": "18.17.1"
  },
  "packageManager": "pnpm@8.7.0"
}
