---
import AppLayout from './app-layout.astro';
import Footer from './parts/footer.astro';
import Navbar from './parts/navbar/navbar.astro';
import type { NavItem } from './parts/navbar/navigation';

interface Props {
  title: string;
  description: string;
  navItems?: NavItem[];
}

const { title, description, navItems = [] } = Astro.props;
---

<AppLayout {title} {description}>
  <slot name="top" />
  <Navbar items={navItems} />
  <slot />
  <Footer />
  <slot name="bottom" />
</AppLayout>
