---
import Visible from '../../actions/visible.svelte';

interface Props {
  threshold?: number;
  duration?: number;
  delay?: number;
}

const { threshold = 0.3, duration = 500, delay = 0 } = Astro.props;
---

<Visible
  class="opacity-0 data-[visible]:opacity-100 transition-opacity ease-in"
  {threshold}
  once
  style={`transition-duration: ${duration}ms; transition-delay: ${delay}ms;`}
  client:load
>
  <slot />
</Visible>
