---
import MockBrowserBar from './mock-browser-bar.astro';
import MockDashboardSidebar from './mock-dashboard-sidebar.astro';
import MockDashboardToolbar from './mock-dashboard-toolbar.astro';
import MockDashboardVideos from './mock-dashboard-videos.astro';
---

<section
  class="w-full border border-border flex flex-col flex-1 h-[500px] rounded-md shadow-md bg-elevate"
  aria-label="Mock Vidstack Dashboard"
>
  <MockBrowserBar />

  <div class="w-full flex-1 flex flex-row relative @container">
    <MockDashboardSidebar />

    <div class="flex-1 flex-col items-start px-2 py-2.5">
      <MockDashboardToolbar />
      <MockDashboardVideos />
    </div>
  </div>
</section>
